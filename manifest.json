{
  "name": "ChatGPT Conversation Pruner",
  "version": "0.1.1",
  "manifest_version": 3,
  "permissions": ["storage"],
  "host_permissions": ["https://chatgpt.com/*"],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["https://chatgpt.com/*"]
    }
  ],
  "options_ui": {
    "open_in_tab": false,
    "page": "options.html"
  }
}
